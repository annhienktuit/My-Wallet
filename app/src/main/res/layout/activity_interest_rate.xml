<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutInterestRate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InterestRateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="16dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnArrowBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_toRightOf="@id/btnArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham_bold"
            android:textSize="22sp"
            android:text="Interest rate"
            />

        <Button
            android:id="@+id/doneBtn"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:textColor="#2F2543"
            android:textStyle="bold"
            android:fontFamily="@font/gotham_bold"
            android:textSize="17sp"
            android:text="Done"
            android:layout_alignParentRight="true"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#2F2543"
        android:fontFamily="@font/gotham"
        android:textSize="15sp"
        android:text="Amount of money"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfAmountOfMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:startIconTint="#43D149"
        app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#2F2543"
        android:fontFamily="@font/gotham"
        android:textSize="15sp"
        android:text="Interest rate"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfInterestRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:startIconTint="#43D149"
        app:startIconDrawable="@drawable/ic_baseline_calculate_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/periodOfTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textSize="15sp"
            android:text="Period of time"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_calendar_24"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="14dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="#8d8d8d"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TypeOfInterestLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textSize="15sp"
            android:text="Type"
            />

        <TextView
            android:id="@+id/TypeOfInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="6dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Simple interest"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="#8d8d8d"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/typeOfTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textSize="15sp"
            android:text="Type of time"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="6dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Weekly"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="#8d8d8d"/>
    </LinearLayout>

</LinearLayout>