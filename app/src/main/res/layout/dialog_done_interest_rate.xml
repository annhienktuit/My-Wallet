<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:textColor="#2F2543"
        android:fontFamily="@font/gotham_bold"
        android:textSize="20sp"
        android:text="Result"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNumberOfPeriods"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Number of periods"
            />

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_below="@+id/txtNumberOfPeriods"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"
            android:background="#8d8d8d"/>

        <TextView
            android:id="@+id/txtAmountOfMoney"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@+id/horizontalLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Amount of money"
            />


        <TextView
            android:id="@+id/txtProfitAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@+id/txtAmountOfMoney"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Profit amount"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProfitAmount"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham_bold"
            android:textSize="20sp"
            android:text="Total"
            />

        <TextView
            android:id="@+id/numberOfPeriods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham_bold"
            android:textSize="16sp"
            android:text="0"
            />

        <TextView
            android:id="@+id/amountOfMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontalLine"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:textColor="#4CAF50"
            android:fontFamily="@font/gotham_bold"
            android:textSize="16sp"
            android:text="0"
            />

        <TextView
            android:id="@+id/profitAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountOfMoney"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:textColor="#4CAF50"
            android:fontFamily="@font/gotham_bold"
            android:textSize="16sp"
            android:text="0"
            />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profitAmount"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:textColor="#2F2543"
            android:fontFamily="@font/gotham_bold"
            android:textSize="16sp"
            android:text="0"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="Close"
            />

    </RelativeLayout>

</LinearLayout>